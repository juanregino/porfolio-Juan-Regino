---
interface Props {
  titlePage: string;
}

const { titlePage } = Astro.props;
import Header from "../components/Header.astro";
import "@fontsource-variable/onest";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" href="leon-solo.svg" type="image/x-icon" />
    <title>{titlePage}</title>
  </head>
  <body class="overflow-x-hidden">
    <div
      class="absolute inset-0 -z-10 h-full w-full bg-[#090c1a] bg-[size:6rem_4rem]"
    >
      <div
        class="absolute bottom-0 left-0 right-0 top-0 bg-[radial-gradient(circle_350px_at_50%_400px,#68005e,transparent)]"
        style="filter: blur(50px);"
      >
      </div>
    </div>
    <div class="w-full h-[80px] "></div>
    <Header class="hidden" />
    <slot />
  </body>
</html>

<style is:global>
  :root {
  
    scrollbar-width: thin;
    scrollbar-color: rgba(255, 255, 0, 0.27) transparent;
  }
  html {
    font-family: "Onest Variable", system-ui, sans-serif;
    scroll-behavior: smooth;
    color : whitesmoke;
  }
  body {
    display: flex;
    flex-direction: column;
    align-items: center;
    min-height: 100vh;
    
    position: relative;
    /* scrollbar-width: 10px;
    scrollbar-color: yellow; */
  }
  body::after {
    content: "";
    position: absolute;
    inset: 0;
    height: 100%;
    width: 100%;
    pointer-events: none;
    user-select: none;
    background-image: url("../../public/fondo.webp");
  }
</style>
